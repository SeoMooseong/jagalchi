<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.jagalchi.dao.ReviewDAO">
	<select id="selectAllMember" resultType="com.spring.jagalchi.model.ReviewModel">
		SELECT * FROM review
	</select>
	<insert id="insertReview">
		INSERT INTO review values(REVIEW_CNT.NEXTVAL, #{rjmcd}, #{rid}, #{rcontent}, #{rdate})
	</insert>
	<delete id="deleteReview">
		DELETE FROM review WHERE id = #{rid}
	</delete>
	<update id="updateReview">
		UPDATE review 
		SET rcontent = #{rcontent}
		WHERE rid = #{rid}
	</update>
</mapper>
